<%= render 'searchbar' %>
<%# <%= render 'form_date' %> 

  
    <div class="album py-5 text-center container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% @workouts.each_with_index do |workout, index| %> 
                <a href="<%= workout_path(workout) %>" class="text-decoration-none">
                <div class="card shadow" style="max-width: 50rem; height: 450px;">
                        <div style="height: 200px; overflow: hidden;">
                            <%= image_tag 'logokeella.png', alt: "workout-image", style:"width: 100%; height: 100%; object-fit: cover;"  %>
                        </div>
                            <div class="card-title-container m-1 border rounded p-2">
                                <h5 class="card-title"><%= workout.title %></h5>
                                    <i class="bi bi-star-fill">Note de l'hote</i>
                        </div>
                        <div class="row">
                            <div class="col">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item border-0">
                                        <%= workout.price %>
                                        <i class="bi bi-currency-euro"></i>
                                    </li>

                                    <li class="list-group-item border-0">
                                        <% if workout.places_available > 0 %>
                                            <i class="bi bi-person-fill-check"></i>
                                        <% else %>
                                            <i class="bi bi-person-fill-lock"></i>
                                        <% end %>
                                            Nombre de places restantes : <%= workout.places_available %>
                                    </li>
                                </ul>
                            </div>
                        
                            <div class="col">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item border-0">
                                        <i class="bi bi-calendar-check"></i>
                                        <%= workout.start_date.strftime("%d/%m/%Y %H:%M") %>
                                    </li>

                                    <li class="list-group-item border-0">
                                        <i class="bi bi-calendar-x-fill"></i>
                                        <%= workout.end_date.strftime("%d/%m/%Y %H:%M") %>
                                    </li>
                                </ul>
                             </div>

                            <li class="list-group-item border-0">
                                <div class="text-center" style="display: flex; justify-content: center; align-items: center; margin: auto;">
                                    <i class="bi bi-geo-alt"></i>
                                    <%= workout.city.name %>
                                </div>
                            </li>
                            
                        </div>
                    </div>
                </a>
               
            <% end %>
        </div>
    </div>

  