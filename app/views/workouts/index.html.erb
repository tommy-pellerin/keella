

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
  <% @workouts.each do |workout| %> 
    <div class="card" style="width: 18rem;">
      <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= workout.title %></h5>
        <p class="card-text"><%= workout.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= workout.price %></li>
        <li class="list-group-item"><%= workout.start_date %></li>
        <li class="list-group-item"><%= workout.end_date %></li>
        <li class="list-group-item"><%= workout.location %></li>
      </ul>
      <div class="card-body">
        <%= link_to 'Show', workout_path(workout), class: "card-link" %>
        <a href="#" class="card-link">Another link</a>
      </div>
    </div>
  <% end %>
</div>


