<main class=" d-flex align-items-center pt-5 my-5 ">
  <div class="form-signin w-40 m-auto">
    <div class="modal-body p-5 rounded-4 shadow bg-body-tertiary">
      <h2>Modifier mon compte</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email,class:"floatingInput" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :mot_de_passe,class:"floatingInput" %> <i>(laissez vide si vous ne voullez pas changer)</i><br />
          <%= f.password_field :mot_de_passe, autocomplete: "new-password",class:"form-control" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> caract√®res minimum</em>
          <% end %>
        </div>
        <br>
        <div class="field">
          <%= f.label :confirmer_le_mot_de_passe,class:"floatingInput" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :mot_de_passe_actuel,class:"floatingInput" %> <i>(Nous avons besoin de votre mot de passe actuel pour confirmer)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control" %>
        </div>
        <br>
        <div class="actions">
        <%= f.submit "Update",class:"w-100 py-2 mb-2 btn btn-outline-primary rounded-3" %>
      </div>
      <br>
      <% end %>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete,class:"w-100 py-2 mb-2 btn btn-outline-danger rounded-3" %>
      <%= link_to "Back", :back %>
    </div>
  </div>
</main>