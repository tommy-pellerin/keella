<section class="bg-primary py-5 text-center">
    <h1 class="text-light">Mes Annonces</h1>
</section>
<section class="container shadow rounded py-5">
    <div class="table-responsive small">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Titre</th>
              <th scope="col">Adresse</th>
              <th scope="col">prix</th>
              <th scope="col">Nombre de participant</th>
              <th scope="col">Date</th>
              <th scope="col">Début / Fin</th>
              <th scope="col">Durée</th>
              <th scope="col">Boutons</th>
            </tr>
          </thead>
          <tbody>
        <%@hosts.each do |host|%>
        <tr>
              <td><%=host.title%></td>
              <td><%=host.location%></td>
              <td><%=host.price%> €</td>
              <td><%=host.participant_number%></td>
              <td><%=host.start_date.strftime("%d %B %Y")%></td>
              <td>De <%=host.start_date.strftime("%H:%M")%> à <%=host.end_date.strftime("%H:%M")%></td>
              <td><%=host.duration / 60%> minutes</td>
                <td>
                <div class="btn-group">
                <%= link_to "Consulter la page workout", workout_path(host), class: 'btn btn-success'%>
                <%= link_to "Modifier le workout", edit_workout_path(host), class: 'btn btn-warning  '%>
                </div>
                </td>
            </tr>
            <%host.reservations.each do |participant|%>
                 <td class="bg-tertiary"></td>
                    <td><%=participant.user.email%></td>
                    <td><%=participant.status%></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                <td>
                <div class="btn-group">
                <%= link_to "Consulter la page Profil", user_path(participant.user), class: 'btn btn-success small'%>
                <%= link_to "Accepter/refuser la reservation", edit_workout_path(host), class: 'btn btn-danger small'%>
                </div>
                </td>
                </tr>
                <%end%>         
        <%end%>
          </tbody>
        </table>
    </div>
</section>