            <td><%=reservation.user.city.name%></td>
        <%else%>
            <td>pas de ville</td>
        <%end%>
        <td><%=reservation.status%></td>
        <td></td>
        <td></td>
        <td></td>
                        <td>
                    <div class="btn-group">
