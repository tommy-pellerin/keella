                        <% if reservation.status == "pending" %>
                        <%= form_with url: user_reservation_path(id: reservation.id, host_decision: "accepted"), method: :patch, class: "btn btn-primary btn-sm", data: { turbo: "true" } do %>
                            <%= submit_tag "Accepter", class: "btn btn-primary btn-sm" %>
                        <% end %>

                        <%= form_with url: user_reservation_path(id: reservation.id, host_decision: "refused"), method: :patch, class: "btn btn-danger btn-sm", data: { turbo: "true" } do %>
                            <%= submit_tag "Refuser", class: "btn btn-danger btn-sm" %>
                        <% end %>
